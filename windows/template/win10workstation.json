{
  "variables": {
    "artifacts_path": "boxes",
    "iso_checksum": "34887592ECC25B725A527748D31971F22C78C82B",
    "iso_path": "D:\\home\\downloads\\windows10\\windows10.iso",
    "guest_additions_mode": "attach",
    "headless": "false",
    "autounattend": "answer_files/win10ent/Autounattend.xml",
    "template": "windows-10",
    "memory_size": "4096",
    "cpu_cores": "1"
  },
  "builders": [
    {
      "type": "vmware-iso",
      "vmx_data": {
        "memsize": "{{ user `memory_size` }}",
        "numvcpus": "{{ user `cpu_cores` }}",
        "scsi0.virtualDev": "lsisas1068",
        "scsi0.present": "TRUE"
      },
      "guest_os_type": "windows9srv-64",
      "headless": "{{ user `headless` }}",
      "iso_url": "{{ user `iso_path` }}",
      "iso_checksum": "{{ user `iso_checksum` }}",
      "iso_checksum_type": "sha1",
      "output_directory": "{{user `artifacts_path`}}/packer-{{user `template`}}-vmware",
      "communicator": "winrm",
      "winrm_username": "vagrant",
      "winrm_password": "vagrant",
      "winrm_timeout": "12h",
      "shutdown_command": "shutdown /s /t 10 /f /d p:4:1 /c \"Packer Shutdown\"",
      "shutdown_timeout": "15m",
      "floppy_files": [
        "{{user `autounattend`}}",
        "scripts/base_setup.ps1"
      ]
    },
    {
      "type": "virtualbox-iso",
      "vboxmanage": [
        [
          "setextradata",
          "{{.Name}}",
          "GUI/HidLedsSync",
          "1"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "{{ user `memory_size` }}"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--vram",
          "128"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "{{ user `cpu_cores` }}"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--audio",
          "none"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--clipboard",
          "bidirectional"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--draganddrop",
          "bidirectional"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--nested-hw-virt",
          "on"
        ]
      ],
      "guest_additions_mode": "{{ user `guest_additions_mode` }}",
      "guest_additions_path": "C:/users/vagrant/VBoxGuestAdditions.iso",
      "guest_os_type": "Windows10_64",
      "hard_drive_interface": "sata",
      "headless": "{{ user `headless` }}",
      "iso_url": "{{ user `iso_path` }}",
      "iso_checksum": "{{ user `iso_checksum` }}",
      "iso_checksum_type": "sha1",
      "output_directory": "{{user `artifacts_path`}}/packer-{{user `template`}}-virtualbox",
      "communicator": "winrm",
      "winrm_username": "vagrant",
      "winrm_password": "vagrant",
      "winrm_timeout": "12h",
      "shutdown_command": "shutdown /s /t 10 /f /d p:4:1 /c \"Packer Shutdown\"",
      "shutdown_timeout": "15m",
      "floppy_files": [
        "{{user `autounattend`}}",
        "scripts/base_setup.ps1"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "powershell",
      "inline": [". { iwr -useb https://raw.githubusercontent.com/theprotos/cookbooks-generic/master/scripts/win.ps1 } | iex; apply-runlist -runlist win-vm-minimal.json"],
      "elevated_user": "vagrant",
      "elevated_password": "vagrant",
      "valid_exit_codes": [ 0, 1 ]
    },
    {
      "type": "windows-restart",
      "restart_timeout": "10m"
    }
  ],
  "post-processors": [
    [
      {
        "type": "vagrant",
        "keep_input_artifact": false,
        "compression_level": 9,
        "output": "package.box",
        "vagrantfile_template": "vagrantfile-windows.template"
      }
    ]
  ]
}